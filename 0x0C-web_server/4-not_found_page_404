   #!/usr/bin/env bash
   
   # Update package index
   sudo apt-get update
   
   # Install nginx server
   sudo apt-get -y install nginx
   
   # Open default configuration file in a text editor
   sudo nano /etc/nginx/sites-available/default
   
   # Add error page configuration
   echo "error_page 404 /404.html;" | sudo tee -a /etc/nginx/sites-available/default > /dev/null
   echo "location = /404.html {" | sudo tee -a /etc/nginx/sites-available/default > /dev/null
   echo "    internal;" | sudo tee -a /etc/nginx/sites-available/default > /dev/null
   echo "    root /home/$(whoami)/;" | sudo tee -a /etc/nginx/sites-available/default > /dev/null
   echo "    echo \"Ceci n'est pas une page\";" | sudo tee -a /etc/nginx/sites-available/default > /dev/null
   echo "}" | sudo tee -a /etc/nginx/sites-available/default > /dev/null
   
   # Restart nginx
   sudo killall -s HUP nginx
   
   # Verify that the 404 page is working correctly
   curl -s -I http://localhost/non-existent-page | grep "HTTP/1.1 404 Not Found"
   curl -s http://localhost/non-existent-page
